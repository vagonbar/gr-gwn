<?xml version="1.0"?>
<block>
  <name>Event Sink</name>
  <key>gwn_event_sink</key>
  <category>GWN</category>
  <import>import gwn</import>
  <make>gwn.event_sink($blkname, $blkid)</make>

 <param>
    <name>blkname</name>
    <key>blkname</key>
    <type>string</type>
  </param>
  <param>
    <name>blkid</name>
    <key>blkid</key>
    <type>string</type>
  </param>


  <sink>
    <name>event</name>
    <type>message</type>
  </sink>

  <doc>
    Event sink, receives and shows Event objects.

    Receives an Event object, shows it.
    @param blkname: block name.
    @param blkid: block identifier.
  </doc>

</block>
