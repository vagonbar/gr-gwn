<?xml version="1.0"?>
<block>
  <name>Stop and Wait send</name>
  <key>gwn_stop_wait_send</key>
  <category>GWN</category>
  <import>import gwn</import>
  <make>gwn.stop_wait_send()</make>

  <param>
    <name>Block Name</name>
    <key>blkname</key>
    <type>string</type>
  </param>
  <param>
    <name>Block Id</name>
    <key>blkid</key>
    <type>string</type>
  </param>
  <param>
    <name>ACK nickname</name>
    <key>ack_nickname</key>
    <value>'CtrlACK'</value>
    <type>string</type>
  </param>

  <!-- event sink node -->
  <sink>
    <name>in0</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- event source nodes -->
  <source>
    <name>out0</name>
    <type>message</type>
    <optional>1</optional>
  </source>


</block>
