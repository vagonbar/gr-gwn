<?xml version="1.0"?>
<block>
  <name>Stop and Wait ACK</name>
  <key>gwn_stop_wait_ack</key>
  <category>GWN</category>
  <import>import gwn</import>
  <make>gwn.stop_wait_ack($blkname, $blkid, $ack_nickname)</make>

  <param>
    <name>Block Name</name>
    <key>blkname</key>
    <type>string</type>
  </param>

  <param>
    <name>Block Id</name>
    <key>blkid</key>
    <type>string</type>
  </param>

  <param>
    <name>ACK nickname</name>
    <key>ack_nickname</key>
    <value>'CtrlACK'</value>
    <type>string</type>
  </param>

  <param>
    <name>Max retries</name>
    <key>max_retries</key>
    <value>3</value>
    <type>int</type>
  </param>

  <param>
    <name>Timeout nickname</name>
    <key>tout_nickname</key>
    <value>'TimerACKTout'</value>
    <type>string</type>
  </param>

  <param>
    <name>Timeout</name>
    <key>timeout</key>
    <value>2.0</value>
    <type>float</type>
  </param>

  <param>
    <name>Buffer length</name>
    <key>buffer_len</key>
    <value>1000</value>
    <type>int</type>
  </param>

  <!-- event sink node -->

  <sink>
    <name>in0</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- event source nodes -->
  <source>
    <name>out0</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <source>
    <name>out1</name>
    <type>message</type>
    <optional>1</optional>
  </source>

</block>
